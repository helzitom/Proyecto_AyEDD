<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:id="@+id/main">

    <!-- Filtros por tipo -->
    <LinearLayout
        android:id="@+id/layout_filters_employees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_employee_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_all_employees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todos"
                style="@style/Widget.Material3.Chip.Filter"
                android:checked="true"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸšš Delivery"
                style="@style/Widget.Material3.Chip.Filter"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“¥ RecepciÃ³n"
                style="@style/Widget.Material3.Chip.Filter"/>

        </com.google.android.material.chip.ChipGroup>

    </LinearLayout>

    <!-- RecyclerView de Empleados -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_employees"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/layout_filters_employees"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Mensaje cuando no hay empleados -->
    <LinearLayout
        android:id="@+id/layout_empty_employees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¥"
            android:textSize="64sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No hay empleados registrados"
            android:textSize="18sp"
            android:textColor="#757575"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar_employees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>