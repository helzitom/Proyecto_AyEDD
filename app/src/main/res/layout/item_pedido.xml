<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:background="@color/mainDark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- ID del Pedido -->
        <TextView
            android:id="@+id/tv_pedido_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pedido #12345"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/chip_estado"/>

        <!-- Estado -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendiente"
            style="@style/Widget.Material3.Chip.Assist"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Cliente -->
        <TextView
            android:id="@+id/tv_cliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cliente: Juan PÃ©rez"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_pedido_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- DirecciÃ³n -->
        <TextView
            android:id="@+id/tv_direccion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Av. Principal 123, Lima"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_cliente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Fecha -->
        <TextView
            android:id="@+id/tv_fecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ðŸ•’ Hace 15 minutos"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_direccion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_total"/>

        <!-- Total -->
        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/ 45.50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_direccion"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Botones de AcciÃ³n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_fecha">

            <Button
                android:id="@+id/btn_ver_detalles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver Detalles"
                style="@style/Widget.Material3.Button.TextButton"/>

            <Button
                android:id="@+id/btn_ver_mapa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver Mapa"
                android:layout_marginStart="8dp"
                style="@style/Widget.Material3.Button.TextButton"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>