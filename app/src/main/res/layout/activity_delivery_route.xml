                android:layout_height="wrap_content"
                android:text="Estado: Asignado"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginBottom="16dp"/>


            <!-- Botones de Control -->
            <Button
                android:id="@+id/btn_iniciar_ruta"
