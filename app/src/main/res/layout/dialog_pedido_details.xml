<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_dialog_pedido_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pedido #IDD"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_dialog_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendiente"
                style="@style/Widget.Material3.Chip.Assist"/>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp"/>

        <!-- Informaci贸n del Cliente -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informaci贸n del Cliente"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_dialog_cliente_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Juan P茅rez Garc铆a"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_dialog_cliente_telefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" +51 987 654 321"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_dialog_cliente_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" juan@example.com"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- Direcci贸n de Entrega -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direcci贸n de Entrega"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_dialog_direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Av. Larco 1234, Miraflores, Lima"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- Items del Pedido -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items del Pedido"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_dialog_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="16dp"/>

        <!-- Resumen -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Subtotal:"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_dialog_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/ 40.00"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delivery:"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_dialog_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/ 5.50"
                android:textSize="16sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TOTAL:"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_dialog_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/ 45.50"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"/>

        </LinearLayout>

        <!-- Fecha y Hora -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informaci贸n Adicional"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_dialog_fecha_creacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Creado: 07/10/2024 14:30"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_dialog_repartidor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repartidor"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- Botones de Acci贸n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btn_dialog_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cerrar"
                style="@style/Widget.Material3.Button.TextButton"/>

            <Button
                android:id="@+id/btn_dialog_ver_mapa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver en Mapa"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>